    <Style x:Key="BusyIndicatorProgressBarStyle" TargetType="telerik1:RadProgressBar">
        <Setter Property="helpers:ThemeHelper.CheckedBackgroundBrush" Value="{telerik1:Windows11Resource ResourceKey=AccentBrush}"/>
        <Setter Property="Margin" Value="0 16"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik1:RadProgressBar">
                    <Grid HorizontalAlignment="Center" Width="180">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Determinate">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProgressBarSpinnerEllipses" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Indeterminate">
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="FullyIndeterminateGridScaleTransform" Storyboard.TargetProperty="ScaleX" RepeatBehavior="Forever">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0.0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.42" Value="0.250"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.84" Value="0.415"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.05" Value="0.500"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.26" Value="0.475"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.54" Value="0.250"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.68" Value="0.230"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.89" Value="0.115"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2.10" Value="0.0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipseRotate" Storyboard.TargetProperty="Angle" RepeatBehavior="Forever">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.42" Value="180"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.84" Value="360"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.05" Value="450"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.26" Value="530"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.54" Value="710"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.68" Value="800"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.89" Value="890"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2.10" Value="1080"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProgressBarTrack" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- In order for the converter to work properly, whis should be square -> Width = Height -->
                        <Grid x:Name="ProgressBarSpinnerEllipses" Margin="0 0 0 16" Width="30" Height="30">
                            <Grid x:Name="FullyIndeterminateGrid">
                                <Grid.RenderTransform>
                                    <ScaleTransform x:Name="FullyIndeterminateGridScaleTransform" ScaleX="0"/>
                                </Grid.RenderTransform>
                            </Grid>
                            <Canvas RenderTransformOrigin=".5 .5">
                                <Canvas.RenderTransform>
                                    <RotateTransform x:Name="ellipseRotate"/>
                                </Canvas.RenderTransform>
                                <Path Stroke="{TemplateBinding helpers:ThemeHelper.CheckedBackgroundBrush}" StrokeThickness="3">
                                    <Path.Data>
                                        <MultiBinding Converter="{StaticResource DoubleToArcConverter}" Mode="OneWay">
                                            <Binding ElementName="FullyIndeterminateGridScaleTransform" Path="ScaleX" Mode="OneWay"/>
                                            <Binding ElementName="ProgressBarSpinnerEllipses" Path="ActualWidth" Mode="OneWay"/>
                                        </MultiBinding>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Grid>
                        <Grid x:Name="ProgressBarTrack" RenderTransformOrigin="0.5 0.5" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.ColumnSpan="3" Background="{telerik1:Windows11Resource ResourceKey=TertiaryForegroundBrush}" Height="1" CornerRadius="0.5" VerticalAlignment="Center"/>
                            <Rectangle x:Name="SkipValueSpacer"/>
                            <Rectangle x:Name="ProgressBarIndicator" Grid.Column="1" RadiusX="1.5" RadiusY="1.5" Height="3" Fill="{TemplateBinding helpers:ThemeHelper.CheckedBackgroundBrush}"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
