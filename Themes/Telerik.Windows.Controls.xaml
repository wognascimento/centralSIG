                                            Background="{TemplateBinding Background}"
                                            MinHeight="1"
                                            CornerRadius="0.5"
                                            VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                    <Rectangle x:Name="SkipValueSpacer" Fill="Transparent" Width="0" Height="1"/>
                                    <Rectangle x:Name="ProgressBarIndicator" Grid.Column="1" RadiusX="1.5" RadiusY="1.5" Height="3" Fill="{TemplateBinding Foreground}" HorizontalAlignment="Left"/>
                                </Grid>
                            </Grid>
                        </telerikPrimitives:LayoutTransformControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
