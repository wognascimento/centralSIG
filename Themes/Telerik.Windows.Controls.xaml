                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <RemoveStoryboard BeginStoryboardName="ExpandInnerThumb"/>
                </Trigger.ExitActions>
                <Setter TargetName="InnerVisual" Property="Fill" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.MouseOverBackgroundBrush)}"/>
            </Trigger>
            <Trigger Property="IsDragging" Value="True">
