                            <Setter TargetName="Divider" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="Divider" Property="Margin" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=TopBottom}"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="DropDownPart" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=CornerRadius, Converter={StaticResource CornerRadiusConverter}, ConverterParameter=TopBottomBottomLeft}"/>
                            <Setter TargetName="ButtonPart" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=CornerRadius, Converter={StaticResource CornerRadiusConverter}, ConverterParameter=TopBottomRight}"/>
                            <Setter TargetName="DropDownPart" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=TopLeftBottom}"/>
                            <Setter TargetName="ButtonPart" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=TopRightBottom}"/>
                            <Setter TargetName="Divider" Property="BorderThickness" Value="0 0 1 0"/>
                        </Trigger>
                        <Trigger Property="DropDownButtonPosition" Value="Top">
                            <Setter TargetName="DropDownPart" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="DropDownPart" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="Divider" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="Divider" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="DropDownPart" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=CornerRadius, Converter={StaticResource CornerRadiusConverter}, ConverterParameter=TopLeftRight}"/>
                            <Setter TargetName="ButtonPart" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=CornerRadius, Converter={StaticResource CornerRadiusConverter}, ConverterParameter=BottomLeftRight}"/>
                            <Setter TargetName="DropDownPart" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=TopLeftRight}"/>
                            <Setter TargetName="ButtonPart" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=BottomLeftRight}"/>
                            <Setter TargetName="Divider" Property="BorderThickness" Value="0 0 0 1"/>
                            <Setter TargetName="Divider" Property="Margin" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=LeftRight}"/>
                            <Setter TargetName="DropDownPart" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderBrush, Converter={StaticResource LinearGradientToSolidColorBrushConverter}}"/>
                        </Trigger>
                        <Trigger Property="DropDownButtonPosition" Value="Right">
                            <Setter TargetName="DropDownPart" Property="Grid.Column" Value="2"/>
                            <Setter TargetName="DropDownPart" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="Divider" Property="Grid.Column" Value="2"/>
                            <Setter TargetName="Divider" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Column" Value="2"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="Divider" Property="BorderThickness" Value="1 0 0 0"/>
                            <Setter TargetName="Divider" Property="Margin" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=TopBottom}"/>
                        </Trigger>

                        <!-- ButtonPartVisibility - Hidden -->
                        <Trigger Property="IsButtonPartVisible" Value="False">
                            <Setter TargetName="DropDownPart" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="DropDownPart" Property="Grid.RowSpan" Value="3"/>
                            <Setter TargetName="DropDownPart" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="DropDownPart" Property="Grid.ColumnSpan" Value="3"/>
                            <Setter TargetName="DropDownPart" Property="IsTabStop" Value="True"/>
                            <Setter TargetName="DropDownPart" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=CornerRadius}"/>
                            <Setter TargetName="DropDownPart" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderBrush}"/>
                            <Setter TargetName="DropDownPart" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderThickness}"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="FocusVisual" Property="Grid.RowSpan" Value="3"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="FocusVisual" Property="Grid.ColumnSpan" Value="3"/>
                            <Setter TargetName="ButtonPart" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="Divider" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- DropDownIndicatorVisibility - Hidden -->
                        <Trigger Property="DropDownIndicatorVisibility" Value="Collapsed">
                            <Setter TargetName="ButtonPart" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=CornerRadius}"/>
                            <Setter TargetName="ButtonPart" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderBrush}"/>
                            <Setter TargetName="ButtonPart" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource AncestorType=telerik1:RadSplitButton}, Path=BorderThickness}"/>
                            <Setter TargetName="Divider" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Column" Value="1"/>
                        </Trigger>
                        <Trigger Property="DropDownPlacement" Value="Bottom"/>
                        <Trigger Property="DropDownPlacement" Value="Top">
                            <Setter TargetName="DropDownPopup" Property="HorizontalOffset" Value="0"/>
                            <Setter TargetName="DropDownPopup" Property="VerticalOffset" Value="{Binding Source={x:Static telerik1:Windows11Palette.Palette}, Path=PopupOffset, Converter={StaticResource MultiplyValueConverter}, ConverterParameter=-1}"/>
                            <Setter TargetName="arrow" Property="Glyph" Value="{StaticResource GlyphArrowChevronUp}"/>
                        </Trigger>
                        <Trigger Property="DropDownPlacement" Value="Left">
                            <Setter TargetName="DropDownPopup" Property="HorizontalOffset" Value="{Binding Source={x:Static telerik1:Windows11Palette.Palette}, Path=PopupOffset, Converter={StaticResource MultiplyValueConverter}, ConverterParameter=-1}"/>
                            <Setter TargetName="DropDownPopup" Property="VerticalOffset" Value="0"/>
                            <Setter TargetName="arrow" Property="Glyph" Value="{StaticResource GlyphArrowChevronLeft}"/>
                        </Trigger>
                        <Trigger Property="DropDownPlacement" Value="Right">
                            <Setter TargetName="DropDownPopup" Property="HorizontalOffset" Value="{telerik1:Windows11Resource ResourceKey=PopupOffset}"/>
                            <Setter TargetName="DropDownPopup" Property="VerticalOffset" Value="0"/>
                            <Setter TargetName="arrow" Property="Glyph" Value="{StaticResource GlyphArrowChevronRight}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="telerik1:RadSplitButton" BasedOn="{StaticResource RadSplitButtonStyle}"/>
    <Style x:Key="LabelStyle" TargetType="telerik1:Label">
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
