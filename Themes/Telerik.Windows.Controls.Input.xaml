                                            <Border x:Name="BorderVisual"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="{TemplateBinding CornerRadius}">
                                                <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Border>
                                            <Popup x:Name="DropDownPopup"
                                                    HorizontalOffset="0"
                                                    VerticalOffset="{telerik1:Windows11Resource ResourceKey=PopupOffset}"
                                                    AllowsTransparency="True"
                                                    StaysOpen="False"
                                                    Focusable="false"
                                                    Placement="Bottom"
                                                    IsOpen="{Binding Path=IsOpen, RelativeSource={RelativeSource TemplatedParent}}">
                                                <Grid x:Name="DropDownPopupGrid" Background="Transparent" Margin="4 0 4 4">
