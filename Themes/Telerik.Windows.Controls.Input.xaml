            <Trigger Property="IsPressed" Value="True" SourceName="PART_DropDownButton">
                <Setter TargetName="DropDownIcon" Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=TertiaryForegroundBrush}"/>
