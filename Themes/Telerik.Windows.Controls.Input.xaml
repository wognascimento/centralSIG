                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        Padding="0"
                        Margin="0 0 5 0"
                        DropDownIndicatorVisibility="Collapsed"
                        helpers:ThemeHelper.MouseOverBackgroundBrush="{telerik1:Windows11Resource ResourceKey=SubtleBrush}"
                        helpers:ThemeHelper.PressedBackgroundBrush="{telerik1:Windows11Resource ResourceKey=SubtleSecondaryBrush}"
                        helpers:ThemeHelper.FocusVisualMargin="0"
                        mat:MaterialAssist.ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}"
