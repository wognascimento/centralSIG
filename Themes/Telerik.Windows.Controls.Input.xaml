                <Popup x:Name="PART_Popup"
                        AllowsTransparency="True"
                        StaysOpen="False"
                        Focusable="False"
                        Placement="Bottom"
                        HorizontalOffset="0"
                        VerticalOffset="{telerik1:Windows11Resource ResourceKey=PopupOffset}">
                    <Grid
                            Margin="4 0 4 4"
                            MinWidth="{TemplateBinding MinDropDownWidth}"
                            Width="{TemplateBinding ActualWidth}"
                            MaxWidth="{TemplateBinding MaxDropDownWidth}"
                            MaxHeight="{TemplateBinding MaxDropDownHeight}">
                        <mat:Shadow ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" Background="{telerik1:Windows11Resource ResourceKey=TertiaryBackgroundBrush}" CornerRadius="{telerik1:Windows11Resource ResourceKey=OverlayCornerRadius}"/>
                        <telerik:RadListBox x:Name="PART_ItemsHost"
                                ScrollViewer.CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}"
                                ItemsSource="{TemplateBinding ItemsSource}"
                                DisplayMemberPath="{TemplateBinding DisplayMemberPath}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                EnableSelectionCaching="False"
                                IsSynchronizedWithCurrentItem="False"
                                GroupStyleSelector="{TemplateBinding GroupStyleSelector}"
                                ItemTemplate="{TemplateBinding ItemTemplate}"
                                ItemTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                ItemContainerStyle="{TemplateBinding ItemContainerStyle}"
                                ItemContainerStyleSelector="{TemplateBinding ItemContainerStyleSelector}"
                                ItemsPanel="{TemplateBinding ItemsPanel}"
                                helpers:ThemeHelper.CornerRadius="{telerik1:Windows11Resource ResourceKey=OverlayCornerRadius}"
                                Background="{telerik1:Windows11Resource ResourceKey=TertiaryBackgroundBrush}"
                                BorderBrush="{telerik1:Windows11Resource ResourceKey=PrimaryBorderBrush}"
                                BorderThickness="1"/>
                        <Border
                                Background="{telerik1:Windows11Resource ResourceKey=TertiaryBackgroundBrush}"
                                BorderBrush="{telerik1:Windows11Resource ResourceKey=PrimaryBorderBrush}"
                                BorderThickness="1"
                                Visibility="{Binding ElementName=PART_NoResultsPresenter, Path=Visibility}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                CornerRadius="{telerik1:Windows11Resource ResourceKey=OverlayCornerRadius}">
                            <ContentPresenter x:Name="PART_NoResultsPresenter" ContentSource="NoResultsContent" Margin="8 8 8 5" Visibility="Collapsed">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=PrimaryForegroundBrush}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                </Popup>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger SourceName="PART_ItemsHost" Property="Visibility" Value="Collapsed">
                <Setter TargetName="PART_NoResultsPresenter" Property="Visibility" Value="Visible"/>
            </Trigger>

            <!-- Disabled -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="BorderVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledBackgroundBrush)}"/>
                <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledBrush)}"/>
                <Setter TargetName="PART_TextBox" Property="Foreground" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledForegroundBrush)}"/>
                <Setter TargetName="PART_QueryButton" Property="Foreground" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledForegroundBrush)}"/>
            </Trigger>

            <!-- MouseOver -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="BorderVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.MouseOverBackgroundBrush), Mode=OneWay}"/>
                <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.MouseOverBrush), Mode=OneWay}"/>
            </Trigger>

            <!-- Focused -->
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter TargetName="FocusVisual" Property="Visibility" Value="Visible"/>
                <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=PrimaryForegroundBrush}"/>
                <Setter TargetName="BorderVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.FocusBackgroundBrush)}"/>
            </Trigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=QueryButtonVisibility}" Value="Collapsed"/>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=ClearButtonVisibility}" Value="Collapsed"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Padding" Value="8 2 8 0"/>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=QueryButtonVisibility}" Value="Collapsed"/>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=ClearButtonVisibility}" Value="Auto"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Padding" Value="8 2 8 0"/>
            </MultiDataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <DataTemplate x:Key="AutoSuggestBoxButtonsContentTemplate">
        <telerik:RadGlyph Glyph="{Binding}"/>
    </DataTemplate>
    <DataTemplate x:Key="AutoSuggestBoxWatermarkTemplate">
        <ContentControl Content="{Binding}" Margin="1 0 0 0" IsTabStop="False"/>
    </DataTemplate>
    <Style x:Key="RadAutoSuggestBoxStyle" TargetType="controls:RadAutoSuggestBox">
        <Setter Property="helpers:ThemeHelper.MouseOverBackgroundBrush" Value="{telerik1:Windows11Resource ResourceKey=MouseOverBackgroundBrush}"/>
        <Setter Property="helpers:ThemeHelper.MouseOverBrush" Value="{telerik1:Windows11Resource ResourceKey=MouseOverBorderBrush}"/>
        <Setter Property="helpers:ThemeHelper.FocusBrush" Value="{telerik1:Windows11Resource ResourceKey=AccentBrush}"/>
        <Setter Property="helpers:ThemeHelper.FocusBackgroundBrush" Value="{telerik1:Windows11Resource ResourceKey=PrimarySolidBackgroundBrush}"/>
        <Setter Property="helpers:ThemeHelper.DisabledBrush" Value="{telerik1:Windows11Resource ResourceKey=DisabledBorderBrush}"/>
        <Setter Property="helpers:ThemeHelper.DisabledBackgroundBrush" Value="{telerik1:Windows11Resource ResourceKey=DisabledBackgroundBrush}"/>
        <Setter Property="helpers:ThemeHelper.DisabledForegroundBrush" Value="{telerik1:Windows11Resource ResourceKey=DisabledForegroundBrush}"/>
        <Setter Property="helpers:ThemeHelper.CornerRadius" Value="{telerik1:Windows11Resource ResourceKey=CornerRadius}"/>
        <Setter Property="helpers:ThemeHelper.FocusVisualMargin" Value="{telerik1:Windows11Resource ResourceKey=FocusVisualMargin}"/>
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="FontFamily" Value="{telerik1:Windows11Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik1:Windows11Resource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=SecondaryForegroundBrush}"/>
        <Setter Property="Background" Value="{telerik1:Windows11Resource ResourceKey=PrimaryBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{telerik1:Windows11Resource ResourceKey=InputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Padding" Value="8 2 0 0"/>
        <Setter Property="WatermarkTemplate" Value="{StaticResource AutoSuggestBoxWatermarkTemplate}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="QueryButtonContent" Value="{StaticResource GlyphZoom}"/>
        <Setter Property="ClearButtonContent" Value="{StaticResource GlyphClose}"/>
        <Setter Property="Template" Value="{StaticResource RadAutoSuggestBoxTemplate}"/>
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource StaticValidationOnFocusTooltipTemplate}"/>
        <Setter Property="KeyboardNavigation.TabNavigation" Value="Local"/>
        <Setter Property="ClearButtonContentTemplate" Value="{StaticResource AutoSuggestBoxButtonsContentTemplate}"/>
        <Setter Property="QueryButtonContentTemplate" Value="{StaticResource AutoSuggestBoxButtonsContentTemplate}"/>
        <Setter Property="ClearButtonCommand" Value="{x:Static telerik:RadWatermarkTextBoxCommands.Clear}"/>
        <Setter Property="QueryButtonCommand" Value="{x:Static telerik:RadAutoSuggestBoxCommands.SubmitQuery}"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="telerik:ValidationErrorTemplateHelper.DisplayMode" Value="ToolTip">
                <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationTooltipTemplate}"/>
            </Trigger>
            <Trigger Property="telerik:ValidationErrorTemplateHelper.DisplayMode" Value="Static">
                <Setter Property="Validation.ErrorTemplate" Value="{StaticResource StaticValidationTooltipTemplate}"/>
            </Trigger>
            <Trigger Property="telerik:ValidationErrorTemplateHelper.DisplayMode" Value="StaticOnFocus">
                <Setter Property="Validation.ErrorTemplate" Value="{StaticResource StaticValidationOnFocusTooltipTemplate}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="controls:RadAutoSuggestBox" BasedOn="{StaticResource RadAutoSuggestBoxStyle}"/>
</ResourceDictionary>
