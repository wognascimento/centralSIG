                            <Setter TargetName="Divider" Property="Grid.Row" Value="2"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="FocusVisual" Property="Grid.Row" Value="2"/>
