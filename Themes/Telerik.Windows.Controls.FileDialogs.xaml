                            Style="{StaticResource PinCloseButtonStyle}"
                            Visibility="{TemplateBinding CloseButtonVisibility}"
                            Command="telerikTabControl:TabItemCommands.Close"
                            IsTabStop="False">
                        <telerik:RadGlyph x:Name="CloseGlyph" Glyph="{StaticResource GlyphClose}" IsHitTestVisible="False"/>
                    </telerik:RadButton>
                </Grid>
            </telerikPrimitives:LayoutTransformControl>
            <Rectangle x:Name="SelectedVisual"
                    RenderTransformOrigin="0.5 1"
                    Stroke="{TemplateBinding helpers:ThemeHelper.CheckedBrush}"
                    StrokeThickness="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    RadiusX="2"
                    RadiusY="2">
                <Rectangle.RenderTransform>
                    <ScaleTransform ScaleX="0" ScaleY="1"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle x:Name="Separator" Style="{StaticResource TabItemSeparatorStyle}" HorizontalAlignment="Right"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="False">
                <Setter Property="HeaderForeground" Value="{telerik1:Windows11Resource ResourceKey=SecondaryForegroundBrush}"/>
                <Setter TargetName="SelectedVisual" Property="Opacity" Value="0"/>
            </Trigger>

            <!-- Selected -->
            <Trigger Property="IsSelected" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="RenderTransform.ScaleX" Storyboard.TargetName="SelectedVisual">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.12" Value="1">
                                    <EasingDoubleKeyFrame.EasingFunction>
                                        <SineEase EasingMode="EaseIn"/>
                                    </EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="RenderTransform.ScaleX" Storyboard.TargetName="SelectedVisual">
                                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction>
                                        <SineEase EasingMode="EaseIn"/>
                                    </EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
                <Setter TargetName="BorderVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.CheckedBackgroundBrush)}"/>
                <Setter TargetName="Separator" Property="Visibility" Value="Collapsed"/>
            </Trigger>
            <Trigger SourceName="wrapper" Property="IsMouseOver" Value="True">
                <Setter TargetName="BorderVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.MouseOverBackgroundBrush)}"/>
                <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.MouseOverBrush)}"/>
                <Setter TargetName="Separator" Property="Visibility" Value="Collapsed"/>
            </Trigger>
            <Trigger Property="IsPinned" Value="True">
                <Setter TargetName="PinGlyph" Property="Glyph" Value="{StaticResource GlyphPin}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition SourceName="PinButton" Property="Visibility" Value="Visible"/>
                    <Condition SourceName="CloseButton" Property="Visibility" Value="Visible"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="CloseButton" Property="Margin" Value="-5 0 5 0"/>
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="SelectedVisual" Property="Opacity" Value="{telerik:Windows11Resource ResourceKey=DisabledOpacity}"/>
                <Setter TargetName="HeaderElement" Property="Opacity" Value="{telerik:Windows11Resource ResourceKey=DisabledOpacity}"/>
                <Setter Property="HeaderForeground" Value="{telerik1:Windows11Resource ResourceKey=DisabledForegroundBrush}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement" Value="Left"/>
                    <Condition Property="TabOrientation" Value="Vertical"/>
                </MultiTrigger.Conditions>
                <Setter Property="LayoutTransform" TargetName="OrientationTransform">
                    <Setter.Value>
                        <RotateTransform Angle="90"/>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement" Value="Right"/>
                    <Condition Property="TabOrientation" Value="Vertical"/>
                </MultiTrigger.Conditions>
                <Setter Property="LayoutTransform" TargetName="OrientationTransform">
                    <Setter.Value>
                        <RotateTransform Angle="-90"/>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement" Value="Bottom"/>
                    <Condition Property="TabOrientation" Value="Horizontal"/>
                </MultiTrigger.Conditions>
                <Setter Property="LayoutTransform" TargetName="OrientationTransform">
                    <Setter.Value>
                        <RotateTransform Angle="180"/>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement" Value="Bottom"/>
                    <Condition Property="TabOrientation" Value="Vertical"/>
                </MultiTrigger.Conditions>
                <Setter Property="LayoutTransform" TargetName="OrientationTransform">
                    <Setter.Value>
                        <RotateTransform Angle="90"/>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement" Value="Top"/>
                    <Condition Property="TabOrientation" Value="Vertical"/>
                </MultiTrigger.Conditions>
                <Setter Property="LayoutTransform" TargetName="OrientationTransform">
                    <Setter.Value>
                        <RotateTransform Angle="-90"/>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
