                                VerticalOffset="{telerik1:Windows11Resource ResourceKey=PopupOffset}">
                            <Grid x:Name="PopupGrid" Margin="4">
                                <mat:Shadow Background="{telerik1:Windows11Resource ResourceKey=TertiaryBackgroundBrush}" ShadowDepth="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.ShadowDepth)}" CornerRadius="{telerik1:Windows11Resource ResourceKey=OverlayCornerRadius}"/>
