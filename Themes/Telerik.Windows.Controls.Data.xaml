                                        Margin="{telerik1:Windows11Resource ResourceKey=FocusVisualMargin}"
                                        telerik:LocalizationManager.ResourceKey="CardViewFilterShowRowsWithValueThat"
                                        TextWrapping="Wrap"/>
                                <input:RadComboBox x:Name="PART_Filter1ComboBox"
                                        Margin="0 5 0 0"
                                        AutomationProperties.Name="first filter combobox"
                                        MinHeight="32"
                                        ItemTemplate="{StaticResource FilterActionTemplate}"
                                        ItemsSource="{Binding AvailableActions}"
                                        SelectedItem="{Binding Filter1.Operator, Mode=TwoWay}"/>
                                <ContentControl x:Name="PART_Filter1ContentControl"
                                        IsTabStop="False"
                                        DataContext="{Binding Filter1}"
                                        Margin="0 5 0 0"
                                        IsEnabled="{Binding Operator, Converter={StaticResource FilterOperatorToFilterEditorIsEnabledConverter}}"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"/>
                                <input:RadComboBox x:Name="PART_LogicalOperatorsComboBox"
                                        AutomationProperties.Name="logical operators combobox"
                                        MinHeight="32"
                                        ItemTemplate="{StaticResource FilterLogicalOperatorTemplate}"
                                        ItemsSource="{Binding LogicalOperators}"
                                        Margin="0 5 0 0"
                                        SelectedItem="{Binding FieldFilterLogicalOperator, Mode=TwoWay}"/>
                                <input:RadComboBox x:Name="PART_Filter2ComboBox"
                                        AutomationProperties.Name="second filter combobox"
                                        Margin="0 5 0 0"
                                        MinHeight="32"
                                        ItemTemplate="{StaticResource FilterActionTemplate}"
                                        ItemsSource="{Binding AvailableActions}"
                                        SelectedItem="{Binding Filter2.Operator, Mode=TwoWay}"/>
                                <ContentControl x:Name="PART_Filter2ContentControl"
                                        IsTabStop="False"
                                        Margin="0 5 0 0"
                                        DataContext="{Binding Filter2}"
                                        IsEnabled="{Binding Operator, Converter={StaticResource FilterOperatorToFilterEditorIsEnabledConverter}}"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PART_ApplyFilterButton"
                                        MinWidth="120"
                                        Visibility="{TemplateBinding FilterButtonVisibility}"
                                        Margin="0 5 0 0"
                                        telerik:LocalizationManager.ResourceKey="CardViewFilter"/>
                                <Button x:Name="PART_ClearFilterButton" Grid.Column="1" MinWidth="120" Margin="4 5 0 0" telerik:LocalizationManager.ResourceKey="CardViewClearFilter"/>
                            </Grid>
                        </StackPanel>
                        <telerik:RadButton x:Name="PART_FilterCloseButton"
                                Grid.Column="1"
                                MinHeight="0"
                                Padding="0"
                                Margin="{TemplateBinding Padding}"
                                Width="22"
                                Height="22"
                                Foreground="{telerik1:Windows11Resource ResourceKey=IconSecondaryBrush}"
                                IsBackgroundVisible="False"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource CardViewFilteringControlCloseButtonStyle}">
                            <telerik:RadGlyph Glyph="{StaticResource GlyphClose}" FontSize="12"/>
                        </telerik:RadButton>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger SourceName="PART_FilterCloseButton" Property="IsPressed" Value="True">
                <Setter TargetName="PART_FilterCloseButton" Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=TertiaryForegroundBrush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="CardViewFilteringControlStyle" TargetType="cardView:FilteringControl">
        <Setter Property="Template" Value="{StaticResource CardViewFilteringControlTemplate}"/>
        <Setter Property="helpers:ThemeHelper.CornerRadius" Value="{telerik1:Windows11Resource ResourceKey=OverlayCornerRadius}"/>
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=PrimaryForegroundBrush}"/>
        <Setter Property="Background" Value="{telerik1:Windows11Resource ResourceKey=AlternativeBrush}"/>
        <Setter Property="BorderBrush" Value="{telerik1:Windows11Resource ResourceKey=PrimarySolidBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="13 8 13 13"/>
        <Setter Property="MinWidth" Value="290"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>
    <Style TargetType="cardView:FilteringControl" BasedOn="{StaticResource CardViewFilteringControlStyle}"/>
    <Style x:Key="CardViewPanelItemDropDownButtonStyle" TargetType="telerik:RadDropDownButton" BasedOn="{StaticResource RadDropDownButtonStyle}">
        <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=IconBrush}"/>
        <Setter Property="DropDownIndicatorVisibility" Value="Collapsed"/>
        <Setter Property="IsBackgroundVisible" Value="False"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="IsOpen" Value="False"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=DisabledForegroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <ControlTemplate x:Key="RadCardViewItemTemplate" TargetType="controls:RadCardViewItem">
        <telerik:RadExpander x:Name="Content"
                Header="{TemplateBinding Header}"
                FontSize="{TemplateBinding FontSize}"
                FontFamily="{TemplateBinding FontFamily}"
                BorderBrush="{TemplateBinding BorderBrush}"
                Background="{TemplateBinding Background}"
                BorderThickness="{TemplateBinding BorderThickness}"
                HeaderTemplate="{TemplateBinding HeaderTemplate}"
                Style="{StaticResource CardViewItemExpanderStyle}"
                IsExpanded="{Binding IsExpanded, RelativeSource={RelativeSource Mode=TemplatedParent}, Mode=TwoWay}">
            <cardView:CardViewDataForm x:Name="PART_CardViewDataForm" BorderThickness="0" CurrentItem="{Binding Data}"/>
        </telerik:RadExpander>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition SourceName="Content" Property="IsExpanded" Value="False"/>
                    <Condition Property="IsSelected" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="Content" Property="Background" Value="{telerik1:Windows11Resource ResourceKey=AccentSelectedBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition SourceName="PART_CardViewDataForm" Property="CanBeginEdit" Value="False"/>
                    <Condition Property="IsSelected" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="Content" Property="helpers:ThemeHelper.CheckedBackgroundBrush" Value="{telerik1:Windows11Resource ResourceKey=AccentSelectedBrush}"/>
                <Setter TargetName="Content" Property="BorderBrush" Value="{telerik1:Windows11Resource ResourceKey=AccentSelectedBrush}"/>
                <Setter TargetName="Content" Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=AccentControlForegroundBrush}"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RadCardViewItem Style -->
    <Style x:Key="RadCardViewItemStyle" TargetType="controls:RadCardViewItem">
        <Setter Property="Background" Value="{telerik1:Windows11Resource ResourceKey=PrimaryBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{telerik1:Windows11Resource ResourceKey=PrimaryBorderBrush}"/>
        <Setter Property="Foreground" Value="{telerik1:Windows11Resource ResourceKey=PrimaryForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontFamily" Value="{telerik:Windows11Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik1:Windows11Resource ResourceKey=FontSize}"/>
        <Setter Property="Template" Value="{StaticResource RadCardViewItemTemplate}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>
    <Style x:Key="CardDataFieldDescriptors_ListBoxItemStyle" TargetType="telerik:RadListBoxItem">
        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadListBoxItem">
                    <cardView:CardDataFieldDescriptorHeaderCell Content="{Binding Converter={StaticResource CardDataFieldDescriptorHeaderConverter}}" Margin="{TemplateBinding Padding}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ItemsPanelTemplate x:Key="CardDataFieldDescriptors_ItemsPanel">
        <StackPanel/>
    </ItemsPanelTemplate>
    <ControlTemplate x:Key="RadCardViewTemplate" TargetType="controls:RadCardView">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="GroupPanel" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="GroupPanelBorderVisual"
                        Grid.ColumnSpan="3"
                        MinHeight="48"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding GroupPanelBackground}"/>
                <cardView:CardViewGroupPanel x:Name="PART_GroupPanel" Visibility="{Binding ShowGroupPanel, RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{TemplateBinding GroupPanelForeground}"/>
                <ItemsControl x:Name="PART_ControlPanelItemsControl" Grid.Column="1" IsTabStop="False" HorizontalAlignment="Right">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <cardView:ControlPanelItemControl/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <telerik:RadDropDownButton x:Name="PART_DataFieldDescriptorsButton"
                        Grid.Column="2"
                        Margin="0 0 8 0"
                        Style="{StaticResource CardViewPanelItemDropDownButtonStyle}"
                        IsTabStop="False"
                        Visibility="{Binding DataFieldDescriptorsButtonVisibility, RelativeSource={RelativeSource TemplatedParent}}">
                    <ToolTipService.ToolTip>
                        <ToolTip Placement="Right" telerik:LocalizationManager.ResourceKey="CardViewDataFieldDescriptorsButtonTooltip"/>
                    </ToolTipService.ToolTip>
                    <telerik:RadDropDownButton.Content>
                        <telerik:RadGlyph Glyph="{StaticResource GlyphGridLayout}" Foreground="{Binding Foreground, ElementName=PART_DataFieldDescriptorsButton}" HorizontalAlignment="Left"/>
                    </telerik:RadDropDownButton.Content>
                    <telerik:RadDropDownButton.DropDownContent>
                        <telerik:RadListBox
                                ItemsSource="{Binding DataFieldDescriptors}"
                                ItemContainerStyle="{StaticResource CardDataFieldDescriptors_ListBoxItemStyle}"
                                ItemsPanel="{StaticResource CardDataFieldDescriptors_ItemsPanel}"
                                BorderThickness="0"
                                Padding="0"
                                MaxWidth="200"
                                MaxHeight="250"
                                telerik:CornerRadiusHelper.ClipRadius="{telerik1:Windows11Resource ResourceKey=OverlayCornerRadius}"/>
                    </telerik:RadDropDownButton.DropDownContent>
                </telerik:RadDropDownButton>
            </Grid>
            <Rectangle x:Name="BackgroundVisual" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Fill="{TemplateBinding Background}"/>
            <layouts:LayoutPresenter x:Name="PART_LayoutPresenter" Grid.Row="1" Margin="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Padding, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=TopBottom}"/>
            <Border x:Name="BorderVisual"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Background="{x:Null}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=LeftRightBottom}"/>
            <ScrollBar x:Name="PART_VerticalScrollBar" Margin="0 0 1 1" Orientation="Vertical" Grid.Row="1" Grid.Column="1"/>
            <ScrollBar x:Name="PART_HorizontalScrollBar" Margin="1 0 1 1" Orientation="Horizontal" Grid.Row="2"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger SourceName="PART_ControlPanelItemsControl" Property="HasItems" Value="True">
                <Setter TargetName="PART_ControlPanelItemsControl" Property="MinHeight" Value="48"/>
            </Trigger>
            <Trigger Property="CardLayout" Value="Columns">
                <Setter TargetName="PART_LayoutPresenter" Property="Margin" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Padding, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=LeftRight}"/>
            </Trigger>
            <Trigger SourceName="PART_GroupPanel" Property="HasItems" Value="False">
                <Setter TargetName="PART_LayoutPresenter" Property="Margin" Value="{Binding Padding, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Trigger>

            <!-- Setters for hide GroupPanel -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="DataFieldDescriptorsButtonVisibility" Value="Collapsed"/>
                    <Condition Property="ShowGroupPanel" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="GroupPanel" Property="Visibility" Value="Collapsed"/>
                <Setter TargetName="BorderVisual" Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}}"/>
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="PART_GroupPanel" Property="Foreground" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledForegroundBrush)}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RadCardView Style -->
    <Style x:Key="RadCardViewStyle" TargetType="controls:RadCardView">
        <Setter Property="helpers:ThemeHelper.DisabledForegroundBrush" Value="{telerik1:Windows11Resource ResourceKey=DisabledForegroundBrush}"/>
        <Setter Property="Template" Value="{StaticResource RadCardViewTemplate}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Background" Value="{telerik1:Windows11Resource ResourceKey=OverlayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{telerik1:Windows11Resource ResourceKey=PrimaryBorderBrush}"/>
        <Setter Property="GroupPanelBackground" Value="{telerik1:Windows11Resource ResourceKey=AlternativeBrush}"/>
        <Setter Property="GroupPanelForeground" Value="{telerik1:Windows11Resource ResourceKey=PrimaryForegroundBrush}"/>
        <Setter Property="CollapsedLength" Value="32"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="MajorLength" Value="310"/>
        <Setter Property="MinorLength" Value="250"/>
        <Setter Property="CardMargin" Value="5"/>
        <Style.Triggers>

            <!-- Swap MajorLength/MinorLength values when CardLayout is set to Columns -->
            <Trigger Property="CardLayout" Value="Columns">
                <Setter Property="MajorLength" Value="250"/>
                <Setter Property="MinorLength" Value="310"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="CardViewDataFormStyle" TargetType="cardView:CardViewDataForm" BasedOn="{StaticResource RadDataFormStyle}">
        <Setter Property="Padding" Value="5 0"/>
    </Style>
    <Style TargetType="controls:RadCardView" BasedOn="{StaticResource RadCardViewStyle}"/>
    <Style TargetType="controls:RadCardViewItem" BasedOn="{StaticResource RadCardViewItemStyle}"/>
    <Style TargetType="cardView:CardViewDataFormDataField" BasedOn="{StaticResource DataFormDataFieldStyle}"/>
    <Style TargetType="cardView:CardViewDataForm" BasedOn="{StaticResource CardViewDataFormStyle}"/>
</ResourceDictionary>
