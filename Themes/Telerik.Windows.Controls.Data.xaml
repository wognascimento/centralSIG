            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="row0" Height="Auto"/>
                    <RowDefinition x:Name="row1" Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="col0" Width="Auto"/>
                    <ColumnDefinition x:Name="col1" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ContentPresenter x:Name="Content"
                        Margin="{TemplateBinding Padding}"
                        Visibility="Collapsed"
                        UseLayoutRounding="True"
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                <telerikPrimitives:LayoutTransformControl x:Name="HeaderContentTransform" RenderTransformOrigin=".5 .5">
                    <Border x:Name="HeaderPanel"
                            MinHeight="32"
                            Background="{telerik1:Windows11Resource ResourceKey=AlternativeBrush}"
                            telerik:CornerRadiusHelper.ClipRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.CornerRadius), Converter={StaticResource CornerRadiusConverter}, ConverterParameter=TopLeftRight}"
                            telerik:CornerRadiusHelper.ClipRadiusOffset="{TemplateBinding telerik:CornerRadiusHelper.ClipRadiusOffset}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=Bottom}">
                        <Grid Background="Transparent" Margin="16 0 8 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter x:Name="HeaderContent"
                                    Focusable="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}"
                                    Content="{TemplateBinding Header}"
                                    FocusVisualStyle="{x:Null}"
                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                    ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"
                                    ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                    VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                    HorizontalAlignment="{TemplateBinding HorizontalHeaderAlignment}"/>
                            <telerik:RadToggleButton x:Name="HeaderButton"
                                    Grid.Column="1"
                                    IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                    ClickMode="{TemplateBinding ClickMode}"
                                    Content="{TemplateBinding Header}"
                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                    Style="{TemplateBinding HeaderButtonStyle}"
                                    ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                    ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"/>
                        </Grid>
                    </Border>
                </telerikPrimitives:LayoutTransformControl>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>

            <!-- CardViewItem not expanded -->
            <Trigger Property="IsExpanded" Value="False">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter TargetName="HeaderPanel" Property="MinHeight" Value="{Binding Path=CollapsedLength, RelativeSource={RelativeSource AncestorType={x:Type controls:RadCardView}, Mode=FindAncestor}}"/>
                <Setter TargetName="HeaderPanel" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.CornerRadius)}"/>
                <Setter TargetName="HeaderPanel" Property="BorderThickness" Value="0"/>
                <Setter TargetName="HeaderPanel" Property="Margin" Value="0 -2 0 0"/>
            </Trigger>

            <!-- CardViewItem Selected -->
            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type controls:RadCardViewItem}}, Mode=TwoWay}" Value="True">
                <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type telerik:RadExpander}}, Path=(helpers:ThemeHelper.CheckedBrush)}"/>
                <Setter TargetName="BorderVisual" Property="BorderThickness" Value="{telerik1:Windows11Resource ResourceKey=FocusThickness}"/>
                <Setter TargetName="HeaderPanel" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type telerik:RadExpander}}, Path=BorderBrush}"/>
                <Setter TargetName="HeaderPanel" Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type telerik:RadExpander}}, Path=(helpers:ThemeHelper.CheckedBackgroundBrush)}"/>
                <Setter TargetName="HeaderButton" Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type telerik:RadExpander}}, Path=Foreground}"/>
            </DataTrigger>

            <!-- CardViewItem Focused -->
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter TargetName="BorderVisual" Property="BorderThickness" Value="{telerik1:Windows11Resource ResourceKey=FocusThickness}"/>
                <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.FocusBrush)}"/>
            </Trigger>
            <DataTrigger Binding="{Binding IsFocused, RelativeSource={RelativeSource AncestorType={x:Type controls:RadCardViewItem}}}" Value="True">
                <Setter TargetName="BorderVisual" Property="BorderThickness" Value="{telerik1:Windows11Resource ResourceKey=FocusThickness}"/>
                <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.FocusBrush)}"/>
            </DataTrigger>

            <!-- Disabled -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="HeaderContent" Property="TextElement.Foreground" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledForegroundBrush)}"/>
                <Setter TargetName="HeaderButton" Property="Foreground" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledForegroundBrush)}"/>
                <Setter TargetName="HeaderContent" Property="Opacity" Value="{telerik:Windows11Resource ResourceKey=DisabledOpacity}"/>
                <Setter TargetName="HeaderButton" Property="Opacity" Value="{telerik:Windows11Resource ResourceKey=DisabledOpacity}"/>
            </Trigger>
            <Trigger Property="ResultOrientation" Value="Vertical">
                <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="90"/>
                    </Setter.Value>
                </Setter>
                <Setter TargetName="HeaderContentTransform" Property="Grid.Row" Value="1"/>
            </Trigger>
            <Trigger Property="ResultOrientation" Value="Horizontal">
                <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="0"/>
                    </Setter.Value>
                </Setter>
                <Setter TargetName="HeaderContentTransform" Property="Grid.Column" Value="1"/>
            </Trigger>

            <!-- ExpandDirection: Down -->
            <Trigger Property="ExpandDirection" Value="Down">
                <Setter TargetName="col0" Property="Width" Value="*"/>
                <Setter TargetName="row1" Property="Height" Value="*"/>
                <Setter TargetName="Content" Property="Grid.Row" Value="1"/>
                <Setter TargetName="Content" Property="Grid.Column" Value="0"/>
                <Setter TargetName="HeaderContentTransform" Property="Grid.Row" Value="0"/>
                <Setter TargetName="HeaderContentTransform" Property="Grid.Column" Value="0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
